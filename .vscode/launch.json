{
	"version": "0.2.0",
	"inputs": [
		{
			"type": "pickString",
			"description": "Select test case",
			"id": "testCases",
			"options": [
				"analyze.test_db.TestSymbolDB",
				"analyze.test_symbols.TestSymbols.test_from_fullyname",
				"analyze.test_symbols.TestSymbols.test_type_of",
				"node.test_definition.TestDefinition.test_block",
				"node.test_node.TestNode.test_i_domain",
				"view.test_render.TestRenderer.test_render_function",
			],
			"default": "analyze.test_symbols.TestSymbols.test_type_of",
		}
	],
	"configurations": [
		{
			"name": "Python: unittest discover",
			"type": "debugpy",
			"request": "launch",
			"module":"unittest",
			"args": ["discover", "tests/"],
			"cwd": "${workspaceFolder}",
			"windows": {
				"env": {
					"PYTHONPATH": "${workspaceFolder};${workspaceFolder}/vendor",
					"PYTHONDONTWRITEBYTECODE": "1",
				},
			},
			"linux": {
				"env": {
					"PYTHONPATH": "${workspaceFolder}:${workspaceFolder}/vendor",
					"PYTHONDONTWRITEBYTECODE": "1",
				},
			},
			"console": "integratedTerminal",
			"justMyCode": true,
		},
		{
			"name": "Python: unittest file",
			"type": "debugpy",
			"request": "launch",
			"module":"unittest",
			"args": ["tests.unit.py2cpp.${input:testCases}"],
			"cwd": "${workspaceFolder}",
			"windows": {
				"env": {
					"PYTHONPATH": "${workspaceFolder};${workspaceFolder}/vendor",
					"PYTHONDONTWRITEBYTECODE": "1",
				},
			},
			"linux": {
				"env": {
					"PYTHONPATH": "${workspaceFolder}:${workspaceFolder}/vendor",
					"PYTHONDONTWRITEBYTECODE": "1",
				},
			},
			"console": "integratedTerminal",
			"justMyCode": true,
		},
		{
			"name": "Python: transpile",
			"type": "debugpy",
			"request": "launch",
			"module":"py2cpp.bin.transpile",
			"args": [
				"-g", "data/grammar.lark",
				"-s", "example/example.py",
				"-t", "example/template",
			],
			"cwd": "${workspaceFolder}",
			"windows": {
				"env": {
					"PYTHONPATH": "${workspaceFolder};${workspaceFolder}/vendor",
					"PYTHONDONTWRITEBYTECODE": "1",
				},
			},
			"linux": {
				"env": {
					"PYTHONPATH": "${workspaceFolder}:${workspaceFolder}/vendor",
					"PYTHONDONTWRITEBYTECODE": "1",
				},
			},
			"console": "integratedTerminal",
			"justMyCode": true,
		},
		{
			"name": "Python: analyze",
			"type": "debugpy",
			"request": "launch",
			"module":"py2cpp.bin.analyze",
			"args": [
				"-g", "data/grammar.lark",
				// "-s", "tests/unit/py2cpp/analyze/fixtures/test_symbols.py",
			],
			"cwd": "${workspaceFolder}",
			"windows": {
				"env": {
					"PYTHONPATH": "${workspaceFolder};${workspaceFolder}/vendor",
					"PYTHONDONTWRITEBYTECODE": "1",
				},
			},
			"linux": {
				"env": {
					"PYTHONPATH": "${workspaceFolder}:${workspaceFolder}/vendor",
					"PYTHONDONTWRITEBYTECODE": "1",
				},
			},
			"console": "integratedTerminal",
			"justMyCode": true,
		},
		{
			"name": "Python: 現在のファイル",
			"type": "debugpy",
			"request": "launch",
			"program": "${file}",
			"windows": {
				"env": {
					"PYTHONPATH": "${workspaceFolder};${workspaceFolder}/vendor",
					"PYTHONDONTWRITEBYTECODE": "1",
				},
			},
			"linux": {
				"env": {
					"PYTHONPATH": "${workspaceFolder}:${workspaceFolder}/vendor",
					"PYTHONDONTWRITEBYTECODE": "1",
				},
			},
			"console": "integratedTerminal",
			"justMyCode": true
		},
	]
}